.custom-articles-header
  position: relative;
  &:before
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 0;
    +above('md')
      background: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%);
  > *
    position: relative;
    z-index: 1;

.custom-articles-aside
  $asideGap = 40px;
  +above('md')
    width: calc(160px + $asideGap);
    padding-right: $asideGap;
    .author 
      width: 160px;
  +above('xl')
    width: 160px;
    padding-right: 0;
  a
    font-size: 14px;
    color: #6E6E6E;
    text-decoration: none;
    &:hover
      text-decoration: underline;

.custom-articles-author
  display: flex;
  align-items: flex-end;
  img
    max-width: 96px;
    margin-right: 24px;
  +above(350px)
    img
      max-width: 150px;
  +above('md')
    display: block;
    img
      max-width: 100%;

.custom-articles-social
  border-top: 1px solid #999;
  border-bottom: 1px solid #999;
  margin: 24px 0;
  padding: 12px 0;
  display: flex;
  justify-content: space-between;
  +above('md')
    display: block;
    text-align: center;
    > *
      transition: transform ease 0.3s;
      &:hover
        transform: scale(1.1);

.custom-articles-main
  ul
    list-style-type: disc;
    margin-left: 20px;
    margin-bottom: 1em;
  p
    margin-top: 0;
    margin-bottom: 1em;
  h3
    font-size: 28px;
    color: #0d346b;
  h4
    font-size: 24px;
    color: #0d346b;
  h5
    font-size: 21px;
    color: #0d346b;
  blockquote
    position: relative;
    padding: 24px;
    @extends .h2
    line-height: 1.5em;
    color: $color-primary;
    &:after,
    &:before
      content: '"';
      position: absolute;
      font-size: 2em;
      width: 32px;
      display: block;
    &:after
      top: 0;
      left: 0;
    &:before
      bottom: -8px;
      right: 0;
    +above('md')
      margin: 16px;
      padding: 40px;
    +above('lg')
      &:after
        top: 8px;
        left: 8px;
      &:before
        bottom: -8px;
        right: 8px;

.custom-articles-main-container
  max-width: 768px;
  @extend .mx-auto

.embed-wrap 
  @extend .proportional
  @extend .proportional.proportional-16by9

article,
.custom-articles-main
  h2
    @extend .h2
    @extend .mt-1x
    clear: both;
  img
    max-width: 100%;
    height: auto;
