#materials_types label input{
    width: 20px;
    height: 20px;
    float: left;
    margin-right: 8px;
}

#materials_types label input + label{
    font-size: 20px;
    cursor: pointer;
}

main .tool-list h4{
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 1.3em;
    font-weight: 700;
    color: #636363;
    text-align: center;
}

main .tool-list p{
    height: 100px;
    font-size: 1.1em;
    padding: 0 30px;
    color: #505050;
    text-align: center;
    line-height: 25px;
    display: flex;
    align-items: center;
}

main .materials h4{
    font-size: 1.4em;
}

main .materials p{
    font-size: 1.2em;
}

.materials .sidebar{
    background: rgba(233,236,239,.5);
    padding: 2em;
}

.button-style{
    text-align: center;
    margin: 0 10px;
}