*[data-load-section]
  position: relative;
  .loader
    position: absolute;
    display: none;
  
  +above('md')
    .loader
      left: 0;
      bottom: 16px;
      text-align: center;
      width: 100%;
    &.loading
      button
        visibility: hidden;
      .loader
        display: block;

  +below('md')
    button
      display: none;
    .loader
      right: 32px;
      top: 120px;
    &.loading
      .loader
        display: inline-block;



