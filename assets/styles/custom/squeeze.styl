/**
Padrões
 */
body > main.squeeze > *:first-child
    padding: 1px 0

.squeeze
    h1
        font-size: 3em
        margin: 50px 0 30px
        line-height: 1.2em
    h2
        font-size 2.7em
        margin 35px 0 20px
        line-height 1.3em
    h3
        font-size 2.4em
        margin 30px 0 15px
        line-height 1.3em
    h4
        font-size 2.1em
        margin 20px 0 15px
        line-height 1.3em
    h5
        font-size 1.8em
        margin 20px 0 15px
        line-height 1.3em
    p
        font-size 1.7em
        line-height 1.5em
        > img:not(.noresize)
            width 100%
            height auto
    li
        list-style none
        font-size 1.5em
        padding 5px 5px 5px 28px
        margin 0px 3px
        background url(../img/mark-cdv.png) 0 8px no-repeat
        line-height 28px
    em
        font-style italic
        font-weight 300
    blockquote
        padding 5px 20px
        margin 25px 15px
        text-align justify
        font-weight 300
        > p
            font-size 1em

.singular-semanal main p > img{
    width: auto;
}

.singular-semanal main p > img.aligncenter{
    margin: 0 auto;
    display: inherit;
}

.singular-semanal .kk-star-ratings{
    display: none;
}

/**
Header
 */
#line_top{
    --first-color: #2DB0EE;
    --second-color: #8cd9ff;
    --reverse-color: #7a7b7b;
    background-image: linear-gradient(-177deg, var(--second-color) 0, var(--first-color) 100%);
    height: 3px;
    margin-bottom: 10px;
}

#header {
    padding-bottom: 10px;
    border-bottom: 1px solid #e0e0e0b0;
}

#menu-main
    text-align: right
    margin-top: 27px
    margin-bottom: 28px
    .menu-item
        list-style: none
        display: inline-block
        a
            text-decoration: none
            margin-left: 35px
            font-size: 18px
        &:hover
            color: #4a5c64

/**
Rodapé
*/
.footer-middle-squeeze{
    text-align: center;
    background: #6c8dab1f;
    padding: 75px 0;
}

.footer-middle-squeeze .uf-email{
    width: 320px;
    height: 53px;
    padding: 0 10px;
    outline: none;
    border: 1px solid #dedede;
    border-radius: 5px;
}

#footer {
    width: 100%;
    display: block;
    background-color: #3f4f55;
    color: #b3c1c7;
}

#footer a {
    color: white;
    text-decoration: none;
}

#credits {
    /*border-bottom: 10px solid #6c8dab1f;*/
    background-color: #344146;
}

#credits .wrap {
    padding: 1.6rem;
    max-width: 68em;
    margin: 0 auto;
    line-height: 1.6rem;
}

.credit p {
    margin: 10px 0;
    text-align: left;
}

#credit-text {
    display: table-cell;
    vertical-align: middle;
}

/**
Custom
 */

.menu {
    display: none;
}

/*
Popup
 */

.modal-dialog{
    z-index: 99999;
}

.modal-header{
    --first-color: rgb(30, 92, 185);
    --second-color: #6ecfff;
    --reverse-color: #0bfbc3;
    background-image: linear-gradient(-177deg,var(--second-color) 0,var(--first-color) 100%);
    padding: 50px 30px 25px;
    border-radius: 5px 5px 0 0;
    text-align: center;
    color: white;
}

.modal-header > h2{
    font-weight: 700;
    font-size: 30px;
}

.modal-body{
    padding: 35px 60px 40px;
    text-align: center;
}

.modal-body input{
    padding: 12px 16px;
    height: auto;
    display: block;
    width: 100%;
    line-height: 1.42857143;
    color: #555;
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    margin: 15px 0;
}

.cta-borda .btn-success.cta{
    padding: 20px 30px;
    font-size: 20px;
}

.cta-rodape .cta-success.cta{
    margin-top: 25px;
}


/**
    Queries
*/

@media (max-width: 412px) {
    main h1{
        font-size: 2.2em;
    }
}

/**
Calculadoras
 */
.page-template-squeeze-tools .calculate_gadget .result_calc .items {
    font-family: Arial, Helvetica, sans-serif;
}

.page-template-squeeze-tools .items li{
    font-size: 15px;
    line-height: 20px;
    padding: 11px 5px 5px 28px;
}

.calculate_gadget .btn-success{
    text-decoration: none;
}

.form-over input[type='text'], .form-over input[type='email']{
    width: 95%;
    border: 1px solid #c1cdd1;
    color: #95a9b1;
    background-color: white;
    padding: 10px;
    outline: none;
}

/**
Squeeze Price
 */
.wrap-squeeze-price{
    margin: 20px 0 35px;
}

.wrap-squeeze-price .content-main{
    width: 100%;
    background: #fff;
    box-shadow: 0 2px 20px 0 rgba(62,70,79,.2);
    box-sizing: border-box;
    border-radius: 8px;
    text-align: center;
}

.wrap-squeeze-price .content-main .title{
    background: #3E464F;
    border-radius: 8px 8px 0 0;
    padding: 24px 12px 21px 12px;
    color: white;
    font-weight: 700;
    font-size: 19px;
    position: relative;
    line-height: 30px;
}
.wrap-squeeze-price .content-main .title:before{
    content: "";
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 0;
    height: 0;
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-top: 20px solid #3E464F;
    position: absolute;
    bottom: -15px;
    left: 45%;
}

.wrap-squeeze-price .content-main .content-parcels{
    color: #A5ADB8;
    font-weight: 700;
    font-size: 1.56em;
    margin-top: 50px;
}
.wrap-squeeze-price .content-main .content-value{
    color: #606873;
    font-size: 5.25em;
    letter-spacing: -5px;
    line-height: 1em;
    margin: 20px 0 35px;
    font-weight: 400;
}
.wrap-squeeze-price .content-main .content-text{
    font-size: 16px;
    font-weight: 400;
    margin: 40px 0 15px;
    line-height: 22px;
    padding: 0 15%;
}
.wrap-squeeze-price .content-main img.payments{
    width: 80%;
    margin: 35px 0;
}
.wrap-squeeze-price .content-right ul{
    color: #373c42;
    margin-top: 20px;
    margin-bottom: 20px;
}
.wrap-squeeze-price .content-right li{
    margin: 15px 0;
    font-size: 17px;
    font-weight: 400;
}
.wrap-squeeze-price .content-right li > i{
    color: #373c42;
}
.wrap-cta-text{
    text-align: center;
    padding: 100px 0 50px;
}
.wrap-cta-text .wrap-img{
    text-align: center;
}
.wrap-cta-text h3{
    font-size: 2.75rem;
    margin-top: 35px;
}
.wrap-cta-text h4{
    font-size: 1.75rem;
    margin-bottom: 35px;
}
.wrap-cta-text .inner-text{
    margin: 0 auto 30px;
    float: none;
}
.wrap-cta-text .inner-text > p{
    font-size: 1.25rem;
    font-weight: 300;
    line-height: 28px;
}

