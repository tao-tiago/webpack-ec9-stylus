*[data-tabs]
  position: relative;
  display: flex;
  overflow: hidden;
  max-width: 100vw;
  > *
    min-width: 100%;
    transition: transform ease 0.3s;

*[data-tabs-header]
  display: flex;
  > *
    padding: 12px;
    background-color: $black[2];
    color: white;
    border: 1px solid white;
    text-transform: uppercase;
    cursor: pointer;
    font-weight: bold;
    @extends .display
    transition: all ease 0.3s;
    flex-grow: 1;
    font-size: 11px;
  .active
    background-color: $blue[4];

.custom-tabs
  background-color: $black[0]
  h3
    @extends .h4
    @extends .uppercase
    margin-bottom: 0;
  p
    margin: 0 0 16px;


+above('md')
  .tabs-parent
    display: flex;
  *[data-tabs-header]
    flex-direction: column;
    > *
      font-size: inherit;
  .custom-tabs
    h2
      margin-top: 40px;
    h3 
      margin-bottom: 8px;
    > *
      padding-left: 80px;
      &.grid
        grid-gap: 40px;

