.module-featured 
    .wrap
        display: table
        margin: auto
        height: 450px
        padding: 80px 0
        > .content-wrap
            display: table-cell
            vertical-align: middle
            > h2
                line-height: 1.1em
            > p
                line-height: 1.3em

.tool-list
    .col
        margin: 10px 10px 40px 10px
        box-shadow: 0 0 20px rgba(62,70,79,.15)
        border-radius: 5px
        display: block
        text-decoration: none
        > img
            border-top-left-radius: 5px
            border-top-right-radius: 5px
        .logo
            width: 100%
            height: auto
        button
            margin-bottom: 34px