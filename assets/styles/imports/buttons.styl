.btn
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border-radius: 8px;
  padding: 4px 16px;
  font-size: 16px;
  height: 36px;
  line-height: 1.2em;
  text-align: center;
  text-transform: uppercase;
  font-weight: bold;
  text-decoration: none;
  border: 2px solid transparent;
  color: $color-primary;
  transition: background ease 0.3s;
  background-color: white;
  &:hover
    background-color: white - #333333;
  &:focus
    border-color: $color-red;

  &.btn-min-width
    min-width: 220px;
  &.btn-big
    border-radius: 12px;
    height: 44px;
    font-size: 20px;
  &.btn-normal
    height: 36px;
    font-size: 16px;
  &.btn-small
    height: 36px;
    font-size: 14px;
  &.btn-smallest
    height: 32px;
    font-size: 12px;

  &.btn-primary
    color: white;
    background-color: $color-primary;
    &:hover
      background-color: $color-primary - #333333;
  &.btn-secondary
    color: white;
    background-color: $color-secondary;
    &:hover
      background-color: $color-secondary - #333333;
  &.btn-red
    color: white;
    background-color: $color-red;
    &:hover
      background-color: $color-red - #333333;
