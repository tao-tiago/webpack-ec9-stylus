.proportional
  width: 100%;
  height: 0;
  overflow: hidden;
  position: relative;
  padding-top: 50%;
  background-color: $blue[0];
  &.proportional-16by9
    padding-top: calc(100% * 9/16);
  > *
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  &.proportional-hover-zoom
    +above('md')
      > *
        transition: all ease 0.2s;
        transform: scale(1.0);
        filter: brightness(1.0);
        &:hover
          transform: scale(1.1);
          filter: brightness(0.75);
      