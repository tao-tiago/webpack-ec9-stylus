.form
  input:not(.btn)
    border: 4px solid transparent;
    background-color: white;
    color: $black[3];
    line-height: 32px;
    border-radius: 8px;
    padding-left: 12px;
    padding-right: 12px;
    font-size: 14px;
    &:focus
      border-color: $color-red;
    &::placeholder
      font-size: 12px;
      text-transform: uppercase;
  &.form-inverse
    input:not(.btn)
      border-color: white;
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      &::placeholder
        color: rgba(255, 255, 255, 0.8);
        
.search-form
  display: flex;
  color: $color-primary;
  border: 3px solid $color-primary;
  border-radius: 24px;
  > *
    height: 24px;
  > button
    border: none;
    background-color: transparent;
    img
      position: relative;
      top: -2px;
  > input
    width: 120px;
    background-color: transparent;
    border: none;
    padding: 0px 12px;
    line-height: 20px;
    font-size: 14px;
    &::placeholder
      color: $blue[2];
      font-size: 11px;
    &:focus
      outline: none;
    
  